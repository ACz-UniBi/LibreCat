#!/usr/bin/env perl

BEGIN {
    use Catmandu::Sane;
    use Catmandu;
    use Path::Tiny;
    Catmandu->load(path(__FILE__)->parent->parent);
}

use Catmandu::Sane;
use LibreCat::CLI;
use Log::Any::Adapter;
use Log::Log4perl;

Log::Log4perl->init(path(Catmandu->root)->child('log4perl.conf')->canonpath);
Log::Any::Adapter->set('Log4perl');

LibreCat::CLI->run;
