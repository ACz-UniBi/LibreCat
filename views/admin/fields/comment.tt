<div class="row innerrow">
   <div class="col-md-2 hidden-xs hidden-sm">
    <label for="id_comment">
      {% comment.label %}{% IF comment.mandatory %}<span class="starMandatory"></span>{% END %}
    </label>
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky">
          <div class="input-group-addon hidden-lg hidden-md">{% comment.label %}</div>
          <textarea name="comment" id="id_comment" class="form-control">[% comment %]</textarea>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>