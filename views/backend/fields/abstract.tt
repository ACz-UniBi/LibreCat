<div class="row innerrow">
  <div class="col-md-2">
    <label for="abstract">
      {% fields.supplementary_fields.abstract.label %}
    </label>
  </div>
  <div class="col-md-10 form-group" id="abstract">
    [% IF !abstract %]
    <span class="col-md-6">
      <textarea rows="3" name="ab_abAbstract_0" id="id_ab_abAbstract_0" class="form-control"></textarea>
    </span>
    <span class="col-md-6">
      <label for="id_ab_abLanguageOId0">
        {% fields.supplementary_fields.abstract.label2 %}
      </label>
    </span>
    <span class="form-group col-md-3">
      <select name="ab_abLanguageOId_0" id="id_ab_abLanguageOId_0" class="form-control">
      [% FOREACH lang IN h.language_preselect.keys.sort %]
        <option value="[% h.language_preselect.$lang %]" [% IF lang == "English" %]selected="selected"[% END %]>[% lang %]</option>
      [% END %]
        <option value="2436687"></option>
      [% FOREACH lang IN h.language.keys.sort %]
        <option value="[% h.language.$lang %]" [% IF abLanguageOId == h.language.$lang %]selected="selected"[% END %]>[% lang %]</option>
      [% END %]
      </select>
    </span>
    [% ELSE %]
      [% FOREACH ab IN abstract %]
      <div class="col-md-6">
        <textarea rows="3" name="ab_abAbstract_[% loop.index %]" id="id_ab_abAbstract_[% loop.index %]" class="form-control">[% ab.text %]</textarea>
      </div>
      <div class="col-md-6">
        <label for="id_ab_abLanguageOId[% loop.index %]">
          {% fields.supplementary_fields.abstract.label2 %}
        </label>
      </div>
      <div class="form-group col-md-3">
        <select name="ab_abLanguageOId_[% loop.index %]" id="id_ab_abLanguageOId_[% loop.index %]" class="form-control">
        [% FOREACH lang IN h.language_preselect.keys.sort %]
          <option value="[% h.language_preselect.$lang %]" [% IF lang == "English" %]selected="selected"[% END %]>[% lang %]</option>
        [% END %]
          <option value="2436687"></option>
        [% FOREACH lang IN h.language.keys.sort %]
          <option value="[% h.language.$lang %]" [% IF abLanguageOId == h.language.$lang %]selected="selected"[% END %]>[% lang %]</option>
        [% END %]
        </select>
      </div>
      [% END %]
    [% END %]
  </div>
</div>