<div class="row innerrow">
  <div class="col-md-2 hidden-xs hidden-sm">
    <label for="id_ipn">
      {% fields.basic_fields.ipn.label %}{% fields.supplementary_fields.ipn.label %}
    </label>
    {% IF fields.basic_fields.ipn.mandatory OR fields.supplementary_fields.ipn.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <span class="form-group col-md-10 hidden-xs hidden-sm">
        <div class="sticky{% IF fields.basic_fields.ipn.mandatory OR fields.supplementary_fields.ipn.mandatory %} mandatory{% END %}">
          <input type="text" name="ipn" id="id_ipn" value="[% ipn || "{% fields.basic_fields.ipn.defaultvalue ? fields.basic_fields.ipn.defaultvalue : "" %}" || "{% fields.supplementary_fields.ipn.defaultvalue ? fields.supplementary_fields.ipn.defaultvalue : "" %}" %]" placeholder="{% fields.basic_fields.ipn.placeholder %}{% fields.supplementary_fields.ipn.placeholder %}" class="sticky form-control{% IF fields.basic_fields.ipn.mandatory OR fields.supplementary_fields.ipn.mandatory %} required{% END %}"{% IF fields.basic_fields.ipn.readonly OR fields.supplementary_fields.ipn.readonly %} readonly="readonly"{% END %}/>
        </div>
      </span>
      <span class="form-group col-xs-11 hidden-lg hidden-md">
        <div class="input-group input-group-sm sticky{% IF fields.basic_fields.ipn.mandatory OR fields.supplementary_fields.ipn.mandatory %} mandatory{% END %}">
          <div class="input-group-addon">{% fields.basic_fields.ipn.label_short %}{% fields.supplementary_fields.ipn.label_short %}</div>
          <input type="text" name="ipn" id="id_ipn" value="[% ipn || "{% fields.basic_fields.ipn.defaultvalue ? fields.basic_fields.ipn.defaultvalue : "" %}" || "{% fields.supplementary_fields.ipn.defaultvalue ? fields.supplementary_fields.ipn.defaultvalue : "" %}" %]" placeholder="{% fields.basic_fields.ipn.placeholder %}{% fields.supplementary_fields.ipn.placeholder %}" class="sticky form-control{% IF fields.basic_fields.ipn.mandatory OR fields.supplementary_fields.ipn.mandatory %} required{% END %}"{% IF fields.basic_fields.ipn.readonly OR fields.supplementary_fields.ipn.readonly %} readonly="readonly"{% END %}/>
          <div class="input-group-addon"></div>
        </div>
      </span>
    </div>
  </div>
</div>