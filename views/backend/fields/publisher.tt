<div class="row innerrow">
  <div class="col-md-2">
    <label for="id_publisher">
      {% fields.basicFields.publisher.label %}{% IF fields.basicFields.publisher.mandatory %}<span class="starMandatory">*</span>{% END %}
    </label>
  </div>
  <div class="col-md-10">
    <span class="form-group col-md-9">
      <input type="text" name="publisher" id="id_publisher" value="[% publisher || "{% fields.basicFields.publisher.defaultvalue ? fields.basicFields.publisher.defaultvalue : "" %}" %]" placeholder="{% fields.basicFields.publisher.placeholder %}" class="form-control{% IF fields.basicFields.publisher.mandatory %} required{% END %}">
    </span>
  </div>
</div>