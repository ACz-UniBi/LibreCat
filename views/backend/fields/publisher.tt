<div class="row innerrow">
  <div class="col-md-2">
    {% IF fields.basic_fields.publisher.mandatory OR fields.supplementary_fields.publisher.mandatory %}<span class="starMandatory">{% END %}
    <label for="id_publisher">
      {% fields.basic_fields.publisher.label %}{% fields.supplementary_fields.publisher.label %}
    </label>
    {% IF fields.basic_fields.publisher.mandatory OR fields.supplementary_fields.publisher.mandatory %}</span>{% END %}
  </div>
  <div class="col-md-10">
    <span class="form-group col-md-9">
      <input type="text" name="publisher" id="id_publisher" value="[% publisher || "{% fields.basic_fields.publisher.defaultvalue ? fields.basic_fields.publisher.defaultvalue : "" %}" || "{% fields.supplementary_fields.publisher.defaultvalue ? fields.supplementary_fields.publisher.defaultvalue : "" %}" %]" placeholder="{% fields.basic_fields.publisher.placeholder %}{% fields.supplementary_fields.publisher.placeholder %}" class="form-control{% IF fields.basic_fields.publisher.mandatory OR fields.supplementary_fields.publisher.mandatory %} required{% END %}"{% IF fields.basic_fields.publisher.readonly OR fields.supplementary_fields.publisher.readonly %} readonly="readonly"{% END %}/>
    </span>
  </div>
</div>