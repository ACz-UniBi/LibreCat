<div class="row innerrow">
  <div class="col-md-2 hidden-xs hidden-sm">
    <label for="id_ipc">
      [% h.loc("forms.${type}.field.ipc.label") %]
    </label>
    {% IF fields.ipc.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-10 col-xs-11">
        <div class="input-group sticky{% IF fields.ipc.mandatory %} mandatory{% END %}">
          <div class="input-group-addon hidden-lg hidden-md">[% h.loc("forms.${type}.field.ipc.label_short") %]</div>
          <input type="text" name="ipc" id="id_ipc" value="[% ipc || lf.$type.field.ipc.defaultvalue %]" placeholder="[% h.loc("forms.${type}.field.ipc.placeholder") %]" class="sticky form-control{% IF fields.ipc.mandatory %} required{% END %}"{% IF fields.ipc.readonly %} readonly="readonly"{% END %}/>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
