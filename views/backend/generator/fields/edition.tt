<div class="row innerrow">
  <div class="col-md-2 hidden-xs hidden-sm">
    <label for="id_edition">
      [% h.loc("forms.${type}.field.edition.label") %]
    </label>
    {% IF fields.edition.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-3 col-xs-11">
        <div class="input-group sticky{% IF fields.edition.mandatory %} mandatory{% END %}">
          <div class="input-group-addon hidden-lg hidden-md">[% h.loc("forms.${type}.field.edition.label") %]</div>
          <input type="text" name="edition" id="id_edition" value="[% edition | html %]" placeholder="[% h.loc("forms.${type}.field.edition.placeholder") %]" class="sticky form-control{% IF fields.edition.mandatory %} required{% END %}"{% IF fields.edition.readonly %} readonly="readonly"{% END %}>
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
