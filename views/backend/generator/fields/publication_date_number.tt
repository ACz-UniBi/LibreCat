<div class="row innerrow">
  <div class="col-md-2 hidden-xs hidden-sm">
    <label for="id_publication_date">
      [% h.loc("forms.${type}.field.publication_date_number.label") %]
    </label>
    {% IF fields.publication_date_number.mandatory %}<span class="starMandatory"></span>{% END %}
  </div>
  <div class="col-md-10">
    <div class="row innerrow">
      <div class="form-group col-md-3 col-xs-11">
        <div class="input-group sticky{% IF fields.publication_date_number.mandatory %} mandatory{% END %}">
          <div class="input-group-addon hidden-lg hidden-md">[% h.loc("forms.${type}.field.publication_date_number.label_pd") %]</div>
          <input type="text" name="publication_date" id="id_publication_date" value="[% publication_date %]" placeholder="[% h.loc("forms.${type}.field.publication_date_number.placeholder_pd") %]" class="sticky form-control{% IF fields.publication_date_number.mandatory %} required{% END %}">
          <div class="input-group-addon"></div>
        </div>
      </div>
      <div class="form-group col-md-7 col-xs-11">
        <div class="input-group sticky{% IF fields.publication_date_number.mandatory %} mandatory{% END %}">
          <div class="input-group-addon hidden-lg hidden-md">[% h.loc("forms.${type}.field.publication_date_number.label_pn") %]</div>
          <input type="text" name="ipn" id="id_ipn" value="[% ipn %]" placeholder="[% h.loc("forms.${type}.field.publication_date_number.placeholder_pn") %]" class="sticky form-control{% IF fields.publication_date_number.mandatory %} required{% END %}">
          <div class="input-group-addon"></div>
        </div>
      </div>
    </div>
  </div>
</div>
