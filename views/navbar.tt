<!DOCTYPE html>
<html ng-app>
  <head>
    <title>PUB - Publication at Bielefeld University</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <link rel="stylesheet" href="css/chosen.css">
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
    <link href="/css/bootstrap3.css" rel="stylesheet" media="screen">
    <script type="text/javascript" src="/javascripts/jquery-latest.js"></script>
    <script src="/javascripts/jquery-ui-1.8.22.custom.min.js"></script>
    <script src="/javascripts/bootstrap3.js"></script>
    <script src="/javascripts/dropzone3.js"></script>
    <script type="text/javascript" src="/javascripts/scripts.js"></script>
    <script type="text/javascript" src="/javascripts/backend.js"></script>
    <script type="text/javascript" src="/javascripts/angular-1.2.14.min.js"></script>
  </head>
  <body>

[% thisPerson = h.getPerson(session.personNumber) %]

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      	  <span class="sr-only">Toggle navigation</span>
      	  <span class="icon-bar"></span>
      	  <span class="icon-bar"></span>
      	  <span class="icon-bar"></span>
      	</button>
      	<a class="navbar-brand" href="#"><span class=".glyphicon .glyphicon-home"></span> MyPUB</a>
     </div>
     
     <!-- Collect the nav links, forms, and other content for toggling -->
     <div class="collapse navbar-collapse navbar-ex1-collapse">
       <ul class="nav navbar-nav">
         <li><a href="/myPUB"><span class="glyphicon glyphicon-list"></span> Home</a></li>
         [% IF session AND session.user %]
         <li><a href="/myPUB/record/new"><span class="glyphicon glyphicon-plus"></span> Add New Publication</a></li>
         <li><a href="[% h.host %]/person/[% session.personNumber %]"><span class="glyphicon glyphicon-eye-open"></span> My Public Author Page</a></li>
         [% IF session.role == "superAdmin" %]
         <li><a href="/myPUB/admin"><span class="glyphicon glyphicon-exclamation-sign"></span> Admin</a></li>
         [% END %]
         [% END %]
       </ul>
       <ul class="nav navbar-nav navbar-right">
         [% IF session AND session.user %]
         <li><a href="#"><span class="glyphicon glyphicon-user"></span> Logged in as: <em>[% session.user %]</em></a></li>
         
         [% IF thisPerson.superAdmin OR thisPerson.reviewer %]
         <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Role: <em>[% session.role %]</em> <span class="glyphicon glyphicon-chevron-down"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/myPUB/change_role/user">User</a></li>
            [% IF thisPerson.reviewer %]
            <li><a href="/myPUB/change_role/reviewer">Reviewer</a></li>
            [% END %]
            [% IF thisPerson.superAdmin %]
            <li><a href="/myPUB/change_role/admin">Admin</a></li>
            [% END %]
          </ul>
         </li>
         [% END %]
         <li><a href="/myPUB/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
         [% ELSE %]
         <li><a href="/myPUB/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
         [% END %]
       </ul>
     </div><!-- /.navbar-collapse -->
   </nav>

