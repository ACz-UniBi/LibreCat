<!DOCTYPE html>
<html ng-app>
  <head>
    <title>PUB - Publication at Bielefeld University</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Bootstrap -->
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="../../assets/js/html5shiv.js"></script>
      <script src="../../assets/js/respond.min.js"></script>
    <![endif]-->
    <link href="/css/bootstrap3.css" rel="stylesheet" media="screen">
    <link href="/css/mypub.css" rel="stylesheet" media="screen">
    <link href="/css/bootstrap-select.css" rel="stylesheet">
    <link href="/css/font-awesome.min.css" rel="stylesheet">
    <script type="text/javascript" src="/javascripts/jquery-latest.js"></script>
    <script src="/javascripts/jquery-ui-1.8.22.custom.min.js"></script>
    <script src="/javascripts/bootstrap3.js"></script>
    <script type="text/javascript" src="/javascripts/scripts.js"></script>
    <script src="/javascripts/dropzone3.0.js"></script>
    <script type="text/javascript" src="/javascripts/backend.js" charset="utf-8"></script>
    <script type="text/javascript" src="/javascripts/pub_dropzones.js"></script>
    <script type="text/javascript" src="/javascripts/angular-1.2.14.min.js"></script>
    <script src="/javascripts/bootstrap-select.js"></script>
    <script src="/javascripts/jquery-sortable.js"></script>

    <style>
    body.dragging, body.dragging * {
      cursor: url(/images/closedhand.cur) 4 4, move !important;
    }

    .dragged {
      position: absolute;
      margin-left:-250px;
      opacity: 0.5;
      z-index: 2000;
    }

    div.dz-preview:hover {
      cursor: url(/images/openhand.cur) 4 4, move !important;
    }

    div.dz-preview.placeholder {
      position: relative;
    }
    div.dz-preview.placeholder:before {
      position: absolute;
    }
    </style>

  </head>
  <body>

[% thisPerson = h.getPerson(session.personNumber) %]

    <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
      	  <span class="sr-only">Toggle navigation</span>
      	  <span class="icon-bar"></span>
      	  <span class="icon-bar"></span>
      	  <span class="icon-bar"></span>
      	</button>
      	<a class="navbar-brand" href="#"><span class=".glyphicon .glyphicon-home"></span> <img src="/images/PUB_UNIBI_logo_gruen.gif" height="30" /></a>
     </div>

     <!-- Collect the nav links, forms, and other content for toggling -->
     <div class="collapse navbar-collapse navbar-ex1-collapse">
       <ul class="nav navbar-nav">
         <li><a href="/myPUB"><span class="glyphicon glyphicon-home"></span> Home</a></li>
         [% IF session AND session.user %]
         <li class="hidden-xs hidden-sm"><a href="/myPUB/record/new"><span class="glyphicon glyphicon-plus"></span> Add New Publication</a></li>
         <li class="hidden-md hidden-lg"><a href="/myPUB/record/new"><span class="glyphicon glyphicon-plus"></span> Add New</a></li>
         <li><a href="[% h.host %]/person/[% session.personNumber %]"><span class="glyphicon glyphicon-eye-open"></span> My Public Author Page</a></li>
         [% IF session.role == "super_admin" %]
         <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Admin <span class="glyphicon glyphicon-chevron-down"></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/myPUB/admin/account">Accounts</a></li>
            <!--<li><a href="/myPUB/admin/import">Import</a></li>-->
            <li><a href="/myPUB/admin/project">Projects</a></li>
            <li><a href="/myPUB/admin/journal">Journals</a></li>
          </ul>
         </li>
         [% END %]
         [% END %]
       </ul>
       <ul class="nav navbar-nav navbar-right">
         [% IF session AND session.user %]
         <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="glyphicon glyphicon-cog"></span> My Settings <span class="glyphicon glyphicon-chevron-down"></span></a>
            <div class="dropdown-menu" id="aff_dropdown" style="width: 550px">
            [% INCLUDE person_affiliation.tt %]
            </div>
         </li>
         <li><a href="#"><span class="glyphicon glyphicon-user"></span> <em>[% session.user %]</em></a></li>

         [% IF thisPerson.super_admin OR thisPerson.reviewer OR thisPerson.data_manager %]
         <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="fa fa-users"></span> <em>[% session.role %]</em> <span class="glyphicon glyphicon-chevron-down"></span></a>
          <ul class="dropdown-menu" role="menu">
            <li><a href="/myPUB/change_role/user">User</a></li>
            [% IF thisPerson.reviewer %]
            <li><a href="/myPUB/change_role/reviewer">Reviewer</a></li>
            [% END %]
            [% IF thisPerson.data_manager %]
            <li><a href="/myPUB/change_role/data_manager">Data Manager</a></li>
            [% END %]
            [% IF thisPerson.super_admin %]
            <li><a href="/myPUB/change_role/admin">Admin</a></li>
            [% END %]
          </ul>
         </li>
         [% END %]
         <li><a href="/logout"><span class="glyphicon glyphicon-log-out"></span> Logout</a></li>
         [% ELSE %]
         <li><a href="/login"><span class="glyphicon glyphicon-log-in"></span> Login</a></li>
         [% END %]
       </ul>
     </div><!-- /.navbar-collapse -->
   </nav>

