<!DOCTYPE html>
<html>
  <head>
    <title>PUB &ndash; Publications at Bielefeld University</title>
    <link rel="icon" href="/images/icon_uni.png" type="image/png" />
  </head>

  <body class="embed">

    <link rel="stylesheet" type="text/css" href="//www.uni-bielefeld.de/css/unistandard_2009.css" media="screen and (min-device-width: 770px)" />
    <link rel="stylesheet" type="text/css" href="/css/bootstrapAwards.css" />
    <script src="https://code.jquery.com/jquery-latest.js"></script>
    <script src="/javascripts/award_bootstrap.min.js"></script>

    [% path = request.path %]
    [% qp = request.params.hash %]
    [% qp.delete('splat') %]
[% persId = honoree.0._id ? honoree.0._id : honoree.0.id %]
[% IF persId %]
  [% person = h.get_person(persId) %]
[% END %]

<div class="row"><!-- outer border -->
  <div class="span6 mainawardcontent"> <!-- main content (left) -->

    <h1><img src="/images/preise_headline_[% lang ? "en" : "de" %].gif" /></h1>
    <div class="span6" style="text-align:right;margin-top:-50px;margin-left:-25px;">
    <img src="/images/beta_white_right.png" width="50">
    </div>

    <a href="[% h.host %][% lang ? "/en" : "" %]/award/[% award_id %][% IF qp.ftyp %]?ftyp=[% qp.ftyp %][% END %]"><h2><img src="/images/preis_gross.png" /> [% award_data.title %]</h2></a>

    <div class="span2" style="padding-bottom:10px;">
    [% IF person.photo %]
      <object data="[% person.photo.replace('http','https') %]" class="img-polaroid" style="max-width:120px;" itemprop="image">
        <img src="/images/dummy.png" style="width:10px;" class="img-polaroid">
      </object>
	[% ELSE %]
	  <img src="/images/dummy.png" class="img-polaroid" width="120">
	[% END %]
	</div>

	<div class="span3">
      <div style="font-weight:bold;padding-bottom:10px;">
      [% honoree.0.title %] [% honoree.0.first_name %] [% honoree.0.last_name %][% IF former_member == "verstorben" %] &dagger; [% END %]
      </div>
      <p>

      [% IF department %]
        [% IF !uni_member && former_member != "verstorben" %]
        ehemals
        [% END %]
        [% FOREACH dep IN department %]
          [% IF dep._id != "" %]
            <a href="http://ekvv.uni-bielefeld.de/pers_publ/publ/EinrichtungDetail.jsp?orgId=[% dep._id %]" target="_blank">[% h.get_department(dep._id).display %]</a><br />
          [% ELSE %]
            [% dep.name %]<br />
          [% END %]
        [% END %]
      [% END %]
      </p>
    </div>

    <div class="span6">

      [% IF organization %][% lang ? "Honoured by" : "Verliehen von" %]: [% organization %]<br />[% END %]
      [% IF year %][% lang ? "Year of Honour" : "Jahr der Ehrung" %]: [% year %]<br />[% END %]
      [% IF extern %]([% lang ? "Honoured before coming to Bielefeld University" : "Ehrung erhalten vor T&auml;tigkeit an der Universit&auml;t Bielefeld" %])<br /><br />[% END %]
      [% IF description %][% IF lang AND lang == "en" %][% description_en %][% ELSE %][% description %][% END %]<br />[% END %]
      [% IF proof %]<a href="[% proof %]" title="[% proof %]" target="_blank">[% lang ? "Documentation" : "Nachweis" %]</a><br />[% END %]
      [% IF url %]<a href="[% url %]" title="[% url %]" target="_blank">URL</a><br />[% END %]

      </div>

      <div class="row">
      <div class="span6">
      [% IF otheraward.total AND otheraward.total > 1 %]

      [% total = otheraward.total %]
      [% otherawards = otheraward.hits %]
      <h4>[% lang ? "Further awards" : "Weitere Ehrungen" %]</h4>
      [% INCLUDE award/hits.tt %]

      [% END %]
      </div>
      </div>

  </div><!-- span6 -->

  <div class="span3">
    <h3 class="underline"><br />[% lang ? "Options" : "Optionen" %]</h3>
    <p><a href="[% h.host %][% lang ? "/en" : "" %]/award[% IF qp.ftyp %]?ftyp=[% qp.ftyp %][% END %]">[% lang ? "Full list" : "Zur Gesamtliste" %] &raquo;</a></p>
  </div><!-- span3 -->

</div><!-- row -->

</body>
</html>
